<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" type="text/css" href="./index.css">
</head>
<body>
    <div class="container1">
    <h1 class="header">Login</h1>

    <form action="/login" method="post" class="login_form">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>
        
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
    </br>
        <button type="submit">Login</button>
    </form>
    </br>
    <% if (error) { %>
        <div class="error_1"><%= error %></div>
    <% } %>
    <% if (message) { %>
        <div  class="error_1"><%= message %></div>
    <% } %>

    <p class="acc"><b><i>Don't have an account?</i></b></p>
    <a href="/signup">Sign Up</a>

    </div>
</body>

<script>
    let logoutTimer;
  
    function resetLogoutTimer() {
        console.log("I am here")
      clearTimeout(logoutTimer);
      logoutTimer = setTimeout(logout, 3000);
    }
  
    function logout() {
        console.log("i am here")
        var elements=document.getElementsByClassName("error_1")
        for(var i=0;i<elements.length;i++){
            elements[i].innerHTML="";
        }
    }
  
    document.addEventListener('mousemove', resetLogoutTimer);
    document.addEventListener('keydown', resetLogoutTimer);
    document.addEventListener('DOMContentLoaded', resetLogoutTimer);
  
  </script>
</html>
